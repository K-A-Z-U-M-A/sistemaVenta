# ============================================
# CONFIGURACIÓN PARA SISTEMA DE COMIDAS
# ============================================
# Copia estas líneas a tu archivo .env

# Configuración de Impresora Térmica
TICKET_PRINTER_NAME=POS-58
# Nombre de la impresora instalada en Windows
# Para ver las impresoras disponibles, ejecuta: wmic printer get name

# Información del Negocio (para tickets)
BUSINESS_RUC=80000000-0
BUSINESS_PHONE=0981-123456
BUSINESS_ADDRESS=Asunción, Paraguay
BUSINESS_SLOGAN=¡Gracias por su preferencia!

# Configuración de Descuentos
DESCUENTO_TRAGO_MONTO=5000
# Monto en Guaraníes que se descuenta de los tragos

# Configuración de Pedidos
PEDIDO_TIEMPO_PREPARACION=15
# Tiempo estimado de preparación en minutos

# Habilitar/Deshabilitar Funcionalidades
ENABLE_TICKET_PRINTING=true
ENABLE_KITCHEN_PRINTING=true
ENABLE_TRAGO_DESCUENTO=true
